{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "lib": ["es5","dom","es2017"],
      "types": ["reflect-metadata"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      // "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*"
         ]
      }
   },
   "include": [
      "src/**/*"
   ]
}